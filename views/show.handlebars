<h1 class="mb-1 restaurant-show-title">{{eatplace.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          English Name：
        </span>
        {{eatplace.name_en}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{eatplace.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{eatplace.location}}
        <a href={{eatplace.google_map}} target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{eatplace.phone}}
      </p>
      <p class="mb-5">
        {{eatplace.description}}
      </p>
      <form action="/places/{{{eatplace.id}}}/delete?_method=DELETE" method="POST" class="mb-2">
        <a href="/" class="btn btn-secondary">Home</a>
        <a href="/places/{{{eatplace.id}}}/edit" class="btn btn-secondary">Edit</a>
        <button type="submit" class="btn btn-warning">Delete</button>
      </form>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{eatplace.image}} alt="{{eatplace.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>