<div class="container">
  <div class="row justify-content-between">
    {{!-- search bar --}}
    <div class="search-bar-outer col-6 col-md-6 ml-3">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>

    {{!-- sort dropdown --}}
    <div class="sort-outer col-5 col-md-4 mr-3">
      <h4 class="mb-2">排序餐廳</h4>
      <div class="dropdown">
        <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenu" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Sort by ...
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu">
          <a class="dropdown-item" href="/1">名稱(A->Z)</a>
          <a class="dropdown-item" href="/2">名稱(Z->A)</a>
          <a class="dropdown-item" href="/3">評價(高->低)</a>
          <a class="dropdown-item" href="/4">類別(A->Z)</a>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="mb-2">
    <a href="/places/create" class="btn btn-outline-success">加入一個新的餐廳</a>
  </div>
  <div class="row row-cols-1 row-cols-md-3">
    {{#each eatplaces}}
    <div class="col">
      <div class="card mb-3">
        <a href="/places/{{{this.id}}}" class="text-secondary">
          <img class="card-img-top" src="{{{this.image}}}" alt="pic for the restaurant">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{{this.name}}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>{{{this.category}}}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{{this.rating}}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer text-right">
            <form action="/places/{{{this.id}}}/delete?_method=DELETE" method="POST">
              <a class="btn btn-secondary btn-sm" href="/places/{{{this.id}}}/edit" role="button">Edit</a>
              <a class="btn btn-secondary btn-sm" href="/places/{{{this.id}}}" role="button">Detail</a>
              <button type="submit" class="btn btn-warning btn-sm">Delete</button>
            </form>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
</div>