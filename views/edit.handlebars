<div class="container my-4">
  <form action="/places/{{{eatplace.id}}}" method="POST">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="name" value="{{{eatplace.name}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="nameEn" class="col-sm-2 col-form-label">English name</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="nameEn" value="{{{eatplace.name_en}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">類別</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="category" value="{{{eatplace.category}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">圖片連結</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="image" value="{{{eatplace.image}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">地址</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="location" value="{{{eatplace.location}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">電話</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="phone" value="{{{eatplace.phone}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="googleMap" class="col-sm-2 col-form-label">Google_map</label>
      <div class="col-md-6">
        <input type="text" class=" form-control" name="googleMap" value="{{{eatplace.google_map}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="rating" class="col-sm-2 col-form-label">Rating</label>
      <div class="col-md-6">
        <input type="text" class="form-control" name="rating" value="{{{eatplace.rating}}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-md-6">
        <textarea class="form-control" name="description">{{{eatplace.description}}}</textarea>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-8">
        <a href="/" class="btn btn-secondary">Home</a>
        <button type="submit" class="btn btn-primary float-right">Confirm Edit</button>
      </div>
    </div>
  </form>
</div>